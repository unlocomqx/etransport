{
  "name": "etransport",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "migrate": "drizzle-kit generate:pg",
    "cy-open": "WATCH=true cypress open --e2e --env WATCH=1 | grep -v GET",
    "cy-run": "WATCH=true cypress run --e2e --browser chrome --env WATCH=1 | grep -v GET",
    "start-dev": "TEST=true env-cmd -f .env.test npm run migrate && env-cmd -f .env.test bun scripts/migrate.ts && npm run dev",
    "cy-start": "TEST=true env-cmd -f .env.test start-server-and-test start-dev http://127.0.0.1:5173 cy-open",
    "cy-test": "TEST=true env-cmd -f .env.test start-server-and-test start-dev http://127.0.0.1:5173 cy-run"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.25.1",
    "@types/child-process-promise": "^2.2.3",
    "@types/node": "^20.8.3",
    "@types/pg": "^8.10.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.16",
    "child-process-promise": "^2.2.1",
    "cypress": "^13.3.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-vite": "^1.4.2",
    "cypress-watch-and-reload": "^1.10.9",
    "daisyui": "^3.9.2",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "env-cmd": "^10.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.34.0",
    "pg": "^8.11.3",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "start-server-and-test": "^2.0.1",
    "svelte": "^4.2.1",
    "svelte-check": "^3.5.2",
    "sveltekit-flash-message": "^2.2.1",
    "sveltekit-superforms": "^1.8.0",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  },
  "type": "module",
  "dependencies": {
    "@iconify/svelte": "^3.1.4",
    "@macfja/svelte-persistent-store": "^2.4.0",
    "@supabase/auth-helpers-sveltekit": "^0.10.3",
    "@supabase/supabase-js": "^2.38.0",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "geolib": "^3.3.4",
    "nanoid": "^5.0.1",
    "postgres": "^3.3.5",
    "svelte-persisted-store": "^0.7.0",
    "svelte-sonner": "^0.3.0"
  }
}
